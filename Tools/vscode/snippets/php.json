{
    // Place your snippets for php here. Each snippet is defined under a snippet name and has a prefix, body and
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
    // same ids are connected.
    // Example:
    // "Print to console": {
    // 	"prefix": "log",
    // 	"body": [
    // 		"console.log('$1');",
    // 		"$2"
    // 	],
    // 	"description": "Log output to console"
    // }
    "err_log": {
        "prefix": "err",
        "body": [
            "error_log(\"$1\". $2);"
        ],
        "description": "print log"
    },
    "err_json": {
        "prefix": "errjson",
        "body": [
            "error_log(\"$1\" . PHP_EOL . json_encode($2));"
        ],
        "description": "print log"
    },
    "define var": {
        "prefix": "var",
        "body": [
            "$$1"
        ],
        "description": "print log"
    },
    "test log": {
        "prefix": "testlog",
        "body": [
            "error_log(\"====执行到:\".__METHOD__.\":\".__LINE__.\"====\");"
        ],
        "description": "print log"
    },
    "print": {
        "prefix": "sout",
        "body": [
            "\\$params = array(\n    'key' => 'value',\n    '$1' => '$2',\n);",
            "error_log(\"执行到:\".__METHOD__.\":\".__LINE__.\"\\n参数是:\".json_encode(\\$params));"
        ],
        "description": "print log"
    },
    "fileput": {
        "prefix": "fileput",
        "body": [
            "file_put_contents(__DIR__.\"/debug.log\", date('Y-m-d h:i:s', time()) . \" result \\n\" . var_export($1,true) . \"\\n\", FILE_APPEND);"
        ],
        "description": "print log"
    }
}