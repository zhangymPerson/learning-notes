{
  // 自定义常用结构的代码联想
  // ==============================================================================================
  "self_header": {
    "prefix": "sheader",
    "body": [
      "/**",
      " * @file : $TM_FILENAME",
      " * @desc : 脚本执行方式 [php $TM_FILENAME]",
      " *         脚本说明:$0",
      " * @date : $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND",
      " * @auth : test",
      " * @version : 1.0",
      " */",
      ""
    ],
    "description": "创建一个[main]函数"
  },
  "self_main": {
    "prefix": "smain",
    "body": [
      "// main 函数",
      "function main() {",
      "\techo \"hello world!\" . PHP_EOL;",
      "}",
      "",
      "main();"
    ],
    "description": "创建一个[main]函数"
  },
  "self_arr": {
    "prefix": "sarr",
    "body": ["\\$arr = array();"],
    "description": "create array"
  },
  "self_list": {
    "prefix": "slist",
    "body": ["\\$list = array();"],
    "description": "创建一个[list]结构"
  },
  "self_set": {
    "prefix": "sset",
    "body": ["\\$set = array();"],
    "description": "创建一个[set]结构"
  },
  "self_map": {
    "prefix": "smap",
    "body": ["\\$map = array();"],
    "description": "创建一个[map]结构"
  },
  "self_date": {
    "prefix": "sdate",
    "body": [""],
    "description": "创建一个[date]对象"
  },
  "self_log": {
    "prefix": "slog",
    "body": [
      "error_log(\"[\" . __FILE__ . \" :\" . __CLASS__ . \":\" . __METHOD__ . \":\" . __LINE__ . \"] ===> \" . \"[\\$$1]\");"
    ],
    "description": "创建一个日志"
  },
  "self_print": {
    "prefix": "sprint",
    "body": ["echo \\$$1 . PHP_EOL;"],
    "description": "创建一个打印输出"
  },
  "self_object": {
    "prefix": "sobject",
    "body": [""],
    "description": "创建一个[object]结构"
  },
  "self_tojson": {
    "prefix": "tojson",
    "body": ["\\$json = json_encode($1);"],
    "description": "obj 转 json"
  },
  "self_toobj": {
    "prefix": "toobj",
    "body": [""],
    "description": "json 转 obj"
  },
  // ==============================================================================================
  // 自定义常用
  // ==============================================================================================
  "输出日志": {
    "prefix": "err",
    "body": [
      "error_log(\"[\" . __CLASS__ . \":\" . __METHOD__ . \":\" . __LINE__ . \"] ===> \" . \"[\\$$1]\");"
    ],
    "description": "print log"
  },
  "err_json": {
    "prefix": "errjson",
    "body": ["error_log(\"$1\". json_encode($2));"],
    "description": "print log"
  },
  "define var": {
    "prefix": "var ",
    "body": ["$$1"],
    "description": "print log"
  },
  "记录当前执行的类和行信息": {
    "prefix": "testlog",
    "body": ["error_log(\"====执行到:\".__METHOD__.\":\".__LINE__.\"====\");"],
    "description": "print log"
  },
  "记录执行日志到php-error文件中": {
    "prefix": "sout",
    "body": [
      "\\$params = array(\n    'key' => 'value',\n    '$1' => '$2',\n);",
      "error_log(\"执行到:\".__METHOD__.\":\".__LINE__.\"\\n参数是:\".json_encode(\\$params));"
    ],
    "description": "print log"
  },
  "换行输出变量": {
    "prefix": "ech",
    "body": ["echo \\$$0 . PHP_EOL;"],
    "description": "'echo' statement"
  },
  "输出内容到当前目录的debug文件": {
    "prefix": "exportFile",
    "body": [
      "file_put_contents(__DIR__.\"/debug.log\", \" result \\n\" . var_export(\\$$1,true) . \"\\n\", FILE_APPEND);"
    ],
    "description": "print log"
  },
  "输出变量的json格式": {
    "prefix": "echojson",
    "body": ["echo json_encode(\\$$1) . PHP_EOL;"],
    "description": "echo"
  }
  // ==============================================================================================
  // source : https://github.com/phiter/phpstorm-snippets-for-vscode/blob/master/snippets/snippets.json
}
