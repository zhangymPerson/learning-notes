    "打印信息": {
        "prefix": "log",
        "body": [
            "print(\"log is %s\"%($1))"
        ],
        "description": "Log output to console"
    },
    "主函数": {
        "prefix": "main",
        "body": [
            "def run():",
            "    print(\"task\")",
            "if __name__ == '__main__':",
            "    run()"
        ],
        "description": "create main"
    },
    "读文件": {
        "prefix": "readFile",
        "body": [
            "fileName = $0",
            "with open(fileName, 'r', encoding='utf-8') as f:",
            "    lines = f.readlines()",
            "    for line in lines:",
            "        print(line)"
        ],
        "description": "read file"
    }
