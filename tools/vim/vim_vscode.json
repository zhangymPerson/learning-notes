{
  // github 地址: https://github.com/VSCodeVim/Vim
  // vim leader 键
  "vim.leader": " ",
  // 启用 .vimrc 文件
  "vim.vimrc.enable": true,
  // 启用 easymotion
  "vim.easymotion": true,
  // 启用 vim 的状态颜色变化
  "vim.statusBarColorControl": true,
  // vim 操作文件目录
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    // t 快速切换各个子页面
    {
      "before": ["t"],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
    },
    {
      "before": ["<leader>", ":"],
      "commands": ["workbench.action.showCommands"],
      "silent": true
    },
    // 需要 bookmarks 插件的支持
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    },
    {
      "before": ["<leader>", "c", "l"],
      "commands": ["editor.action.addCommentLine"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "d", "o", "c"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<leader>", "g", "f"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["<leader>", "e", "e"],
      "commands": ["workbench.action.showErrorsWarnings"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["workbench.view.search"]
    },
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["<leader>", "g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "p", "r"],
      "commands": ["workbench.action.debug.restart"]
    },
    {
      "before": ["<leader>", "p", "s"],
      "commands": ["workbench.action.debug.stop"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    }
  ]
}
